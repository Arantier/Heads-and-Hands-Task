<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/label_popup_margin_horizontal"
    android:layout_marginEnd="@dimen/label_popup_margin_horizontal"
    android:background="@drawable/bkg_label_popup"
    android:elevation="@dimen/toolbar_shadow_elevation"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:translationY="@dimen/toolbar_height">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/label_popup_padding_horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/text"
        app:layout_constraintEnd_toStartOf="@+id/text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text"
        app:srcCompat="@drawable/ic_error_outline"
        android:tint="@color/design_default_color_error"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/label_popup_padding_horizontal"
        android:layout_marginTop="@dimen/label_popup_padding_vertical"
        android:layout_marginEnd="@dimen/label_popup_padding_horizontal"
        android:layout_marginBottom="@dimen/label_popup_padding_vertical"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ААААААААААААААААААААААААААААААААААААААААААААААаа" />
</androidx.constraintlayout.widget.ConstraintLayout>